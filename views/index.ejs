<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<body>
    <div class="container">
        <div>
            <h1>URL Shortner</h1>
        </div>
        <div>
            <form action="/shortUrl" method="POST" class='my-4 form-inline'>
                <label for="fullUrl" class="sr-only"> Full URL </label>
                <input type="url" placeholder="URL" required name="fullURL"  id="fullURL" class="form-control col mr-2"> </input>
                <button class="btn btn-success" type="submit">Shorten!</button>
            </form>
        </div>
        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>Full URL</th>
                    <th>Short URL</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach((url) => { %>
                    <tr>
                        <td>
                            <a href="<%= url.fullUrl%>">
                                <%= url.fullUrl %>
                            </a>
                        </td>
                        <td>
                            <a href="<%= url.shortUrl %>">
                                <%= url.shortUrl %>
                            </a>
                        </td>
                        <td>
                            <%=  url.clicks %>
                        </td>
                    </tr>
                <% }); %>
            </tbody> 
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>